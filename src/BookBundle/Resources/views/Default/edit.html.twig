{% extends '@Book/base.html.twig' %}
{% block body %}
    <h1>
        {% if new %}
            {{ 'form.title.add'|trans }}
        {% else %}
            {{ 'form.title.edit'|trans }}
        {% endif %}
    </h1>
    {{ form_start(form) }}

    {{ form_row(form.title) }}
    <hr>
    {{ form_row(form.author) }}
    <hr>
    {{ form_row(form.readDate) }}
    <hr>
    {{ form_row(form.isDownloadAllowed) }}
    <hr>
    {% if oldFilePath.cover %}
        <img src="{{ upload }}/{{ oldFilePath.cover }}">
        {% if form.deleteCover is defined %}
            {{ form_row(form.deleteCover) }}
        {% endif %}
    {% endif %}
    {{ form_row(form.cover) }}
    <hr>
    {% if oldFilePath.source %}
        <a href="{{ upload }}/{{ oldFilePath.source }}"> {{ 'book.source.link'|trans }} </a>
        {% if form.deleteSource is defined %}
            {{ form_row(form.deleteSource) }}
        {% endif %}
    {% endif %}
    {{ form_row(form.source) }}
    <hr>
    {{ form_end(form) }}
{% endblock %}